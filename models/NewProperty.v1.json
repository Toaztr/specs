{
  "title": "NewProperty",
  "description": "Projet d'acquisition d'un logement neuf.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "NEW_PROPERTY"
      ]
    },
    "project_state": {
      "$ref": "./ProjectState.v1.json"
    },
    "administrative_information": {
      "$ref": "./AdministrativeInformation.v1.json"
    },
    "surfaces": {
      "$ref": "./Surfaces.v1.json"
    },
    "delivery_date": {
      "description": "Date de livraison, dans le cas d'une construction ou d'une VEFA.",
      "format": "date-time",
      "type": "string"
    },
    "dpe_rate": {
      "$ref": "./DpeRate.v1.json"
    },
    "construction_norm": {
      "description": "Norme de construction.",
      "type": "string"
    },
    "lot_number": {
      "description": "Numéro de lot.",
      "type": "string"
    },
    "rooms_count": {
      "description": "Nombre de pièces.",
      "minimum": 0,
      "type": "integer"
    },
    "program": {
      "type": "string",
      "description": "Nom du programme neuf."
    },
    "expenses": {
      "type": "object",
      "properties": {
        "price": {
          "description": "Prix du bien à acquérir. Ou prix du terrain dans le cadre d'une construction.",
          "minimum": 0,
          "type": "number"
        },
        "other_expenses": {
          "description": "Montant des éventuelles autres dépenses non catégorisées.",
          "minimum": 0,
          "type": "number"
        },
        "vat": {
          "description": "Montant de la TVA, si celle-ci est comptées séparément.",
          "minimum": 0,
          "type": "number"
        },
        "other_taxes": {
          "description": "Montant des éventuelles autres taxes (RAP, aménagement, ...).",
          "minimum": 0,
          "type": "number"
        },
        "fees": {
          "type": "object",
          "properties": {
            "agency_fees": {
              "description": "Frais d'agence.",
              "minimum": 0,
              "type": "number"
            },
            "broker_fees": {
              "default": 0,
              "description": "Frais de courtage.",
              "minimum": 0,
              "type": "number"
            },
            "file_management_fees": {
              "default": 0,
              "description": "Frais de dossier.",
              "minimum": 0,
              "type": "number"
            },
            "notary_fees": {
              "description": "Frais de notaire.",
              "minimum": 0,
              "type": "number"
            }
          }
        }
      }
    }
  },
  "required": [
    "type"
  ]
}