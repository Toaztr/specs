{
  "title": "Works",
  "description": "Projet de travaux",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "WORKS"
      ]
    },
    "administrative_information": {
      "$ref": "./AdministrativeInformation.v1.json"
    },
    "surfaces": {
      "$ref": "./Surfaces.v1.json"
    },
    "construction_date": {
      "description": "Date de construction, pour les logements achevés.",
      "format": "date-time",
      "type": "string"
    },
    "construction_norm": {
      "description": "Norme de construction.",
      "type": "string"
    },
    "delivery_date": {
      "description": "Date de livraison.",
      "format": "date-time",
      "type": "string"
    },
    "lot_number": {
      "description": "Numéro de lot.",
      "type": "string"
    },
    "rooms_count": {
      "description": "Nombre de pièces.",
      "minimum": 0,
      "type": "integer"
    },
    "dpe_rate": {
      "$ref": "./DpeRate.v1.json"
    },
    "expenses": {
      "type": "object",
      "properties": {
        "price": {
          "type": "number",
          "description": "Prix des travaux.",
          "minimum": 0
        },
        "other_expenses": {
          "type": "number",
          "description": "Montant des éventuelles autres dépenses non catégorisées.",
          "minimum": 0
        },
        "fees": {
          "type": "object",
          "properties": {
            "broker_fees": {
              "description": "Frais de courtage.",
              "minimum": 0,
              "type": "number"
            },
            "file_management_fees": {
              "description": "Frais de dossier.",
              "minimum": 0,
              "type": "number"
            }
          }
        }
      },
      "required": [
        "price"
      ]
    }
  },
  "required": [
    "type"
  ]
}